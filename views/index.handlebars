    <!--********************Portfolio*************************-->
    <div class="main" id="portfolio" style="display: none">
        <div class="container">
            <div class="row">
                <div class="col-xs-0 col-sm-0 col-md-1"></div>
                <div class="col-xs-12 col-sm-12 col-md-10">
                    <div class="row">
                        <div class="col">
                            <i class="fas fa-briefcase fa-5x rotate-center"></i>
                            <h1>Portfolio</h1>
                        </div>
                    </div>
                    <div class="row">

                        {{#if projects}}
                        {{#each projects}}
                        <div class="col-md-6 col-lg-4 my-3">
                            <div class="card">
                                <img src="{{this.image}}" class="card-img-top" alt="{{this.subtitle}}">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <p class="card-text">{{this.subtitle}}</p>
                                    <a target="blank" class="float-left" href="{{this.linkDemo}}"><i
                                            class="fas fa-desktop fa-lg"></i>
                                        <p>demo</p>
                                    </a>
                                    <a target="blank" class="float-right" href="{{linkGit}}"><i
                                            class="fab fa-git-square fa-lg"></i>
                                        <p>code</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}


                    </div>
                </div>
                <div class="col-xs-0 col-sm-0 col-md-1"></div>
            </div>
        </div>
    </div>
    <!--********************Contact*************************-->
    <div class="main" id="contact" style="display: none">
        <div class="container">
            <div class="row">
                <div class="col">
                    <i class="fas fa-address-card fa-5x rotate-center"></i>
                    <h1>Contact</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h5 class="text-background">Reach Me</h5>
                    <div class="row">
                        <div class="col-sm-6 col-md-3 my-2">
                            <i class="fas fa-map-marker-alt fa-2x"></i>
                            <p>Houston, Texas, USA</p>
                        </div>
                        <div class="col-sm-6 col-md-3 my-2">
                            <i class="fas fa-phone fa-2x"></i>
                            <p>+1 713-277-8137</p>
                        </div>
                        <div class="col-sm-6 col-md-3 my-2">
                            <i class="fas fa-envelope fa-2x"></i>
                            <p>duckhang2210@gmail.com</p>
                        </div>
                        <div class="col-sm-6 col-md-3 my-2">
                            <i class="fas fa-check-circle fa-2x"></i>
                            <p>Freelance Available</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h5 class="text-background">Leave me a message</h5>
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-10">
                            {{msg}}
                            <form method="POST" action="/send">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input name='email' type="email" class="form-control" id="emailInput"
                                            placeholder="Enter email" required>
                                    </div>

                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input name='name' type="text" class="form-control" id="nameInout"
                                            placeholder="Can i have your name please?" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col">
                                        <label for="exampleFormControlTextarea1">Message</label>
                                        <textarea name='message' class="form-control" id="exampleFormControlTextarea1"
                                            rows="5"></textarea required>
                                      </div>
                                </div>
                  
                                <button type="submit" class="btn btn-dark" id="sendButton">
                                  <p>Send</p>
                                </button>
                        
                              </form>
                        </div>
                        <div class="col-sm-1"></div>
                      </div>
                </div>
              </div>
            </div>
          </div>
          